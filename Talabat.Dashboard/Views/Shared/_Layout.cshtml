<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LinkDev.Talabat.Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LinkDev.Talabat.Dashboard.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .navbar {
            justify-content: flex-end; /* Aligns the logout button to the right */
            padding: 10px 20px; /* Padding for the navbar */
        }

        .btn-signout {
            background-color: black; /* Black background */
            color: darkgray; /* White text color */
            border: 2px solid darkgray; /* Border color with weight */
            padding: 10px ; /* Padding for the button */
            border-radius: 5px; /* Slightly rounded corners */
            transition: transform 0.3s, background-color 0.3s; /* Transition for zoom and background color */
            font-weight: bold; /* Bold text */
            font-size: 17px; /* Font size */
            margin: 10px; /* Space on all sides */
        }

            .btn-signout:hover {
                transform: scale(1.1); /* Zoom effect on hover */
                background-color: darkgray; /* Dark gray on hover */
                cursor: pointer; /* Pointer cursor on hover */
            }
    </style>
</head>
<body>
    <header>
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Signout Button -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link btn-signout" asp-controller="Admin" asp-action="Logout">
                        Sign Out <!-- Text for the button -->
                    </a>
                </li>
            </ul>
        </nav>
    </header>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Security</div>
                        <a class="nav-link" asp-controller="Role" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Roles
                        </a>
                        <a class="nav-link" asp-controller="User" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Users
                        </a>
                        <div class="sb-sidenav-menu-heading">Website</div>
                        <a class="nav-link" asp-controller="Product" asp-action="Index">
                            <div class="sb-nav-link-icon"></div>
                            Products
                        </a>
                        <a class="nav-link" asp-controller="Brand" asp-action="Index">
                            <div class="sb-nav-link-icon"></div>
                            Product Brand
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content" class="mt-4">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/js/scripts.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
        <script src="~/assets/demo/chart-area-demo.js"></script>
        <script src="~/assets/demo/chart-bar-demo.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
        <script src="~/js/datatables-simple-demo.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </footer>
</body>
</html>
