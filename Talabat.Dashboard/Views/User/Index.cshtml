@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div style="border-bottom: 4px ridge #007bff; padding-bottom: 8px; text-align: center;">
        <h1 class="mb-0" style="font-size: 3.5rem; color: darkblue; text-shadow: 15px 15px 95px rgba(0, 123, 255, 1);">All Users</h1>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered border-primary" style="max-width: 950px; margin: auto;">
                <thead class="table-light">
                    <tr class="table-primary text-center">
                        <th class="font-weight-bold" style="font-size: 1.2rem;">@Html.DisplayNameFor(r => r.UserName)</th>
                        <th class="font-weight-bold" style="font-size: 1.2rem;">@Html.DisplayNameFor(r => r.DisplayName)</th>
                        <th class="font-weight-bold" style="font-size: 1.2rem;">@Html.DisplayNameFor(r => r.Email)</th>
                        <th class="font-weight-bold" style="font-size: 1.2rem;">@Html.DisplayNameFor(r => r.PhoneNumber)</th>
                        <th class="font-weight-bold" style="font-size: 1.2rem;">Roles</th>
                        <th class="font-weight-bold" style="font-size: 1.2rem;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="text-center font-weight-bold" style="font-size: 1.1rem; color: darkblue; font-weight: 800;">@user.UserName</td>
                            <td class="text-center font-weight-bold" style="font-size: 1.1rem; color: darkblue; font-weight: 800;">@user.DisplayName</td>
                            <td class="text-center font-weight-bold" style="font-size: 1.1rem; color: darkblue; font-weight: 800;">
                                <a href="mailto:@user.Email" style="text-decoration: none; color: darkblue;">@user.Email</a>
                            </td>
                            <td class="text-center font-weight-bold" style="font-size: 1.1rem; color: darkblue; font-weight: 800;">@user.PhoneNumber</td>
                            <td class="text-center font-weight-bold" style="font-size: 1.1rem; color: darkblue; font-weight: 800;">@string.Join(", ", user.Roles.ToList())</td>
                            <td class="text-center">
                                <a class="btn btn-success" asp-action="Update" asp-route-id="@user.Id">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="mt-3 p-3 alert alert-warning" style="border: 2px solid #FFB6C1; background-color: #FFEBEE; color: #D81B60; border-radius: 5px;">
            <h2 class="text-center" style="margin: 0;">There are no Users</h2>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Custom Styles -->
<style>
    body {
        font-family: 'Arial', sans-serif; /* Change the font style */
        background-color: #f0f4f8; /* Light background color */
    }

    .table {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden; /* To round the corners of the table */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

        .table th {
            background-color: #0056b3; /* Darker blue for headers */
            color: white;
            font-size: 1.2rem; /* Larger font for headers */
        }

        .table tbody tr:hover {
            background-color: #e9ecef; /* Light gray on row hover */
        }

    .btn {
        margin: 5px; /* Space between buttons */
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff; /* Blue for primary actions */
        border-color: #007bff;
        color: white; /* White text color */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

    .btn-success {
        background-color: #28a745; /* Green for update */
        border-color: #28a745;
        color: white; /* White text color */
    }

        .btn-success:hover {
            background-color: #218838; /* Darker green on hover */
        }

    .btn-danger {
        background-color: #dc3545; /* Red for delete */
        border-color: #dc3545;
        color: white; /* White text color */
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
        }

    .alert {
        border-radius: 8px; /* Rounded corners for alerts */
    }
</style>
