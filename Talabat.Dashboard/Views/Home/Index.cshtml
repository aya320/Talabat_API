@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex align-items-center justify-content-center" style="height: 70vh;">
    <!-- Adjusted height -->
    <div class="text-center">
        <h1 id="welcomeText">
            Welcome to Talabat!
          🛒
        </h1>
    </div>
</div>

<style>
    /* Inline styles for the welcome text */
    #welcomeText {
        font-family: 'Times New Roman', Times, serif;
        font-size: 90px; /* Adjusted font size */
        color: black; /* Initial text color */
        font-weight: 350;
        font-style: italic;
        letter-spacing: 2px;
        text-shadow: 15px 15px 20px maroon; /* Larger maroon shadow */
        transition: color 1.5s ease-in-out, text-shadow 1.5s ease-in-out; /* Increased duration */
        text-align: center; /* Center the text */
    }

</style>

